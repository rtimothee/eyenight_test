{% extends 'base.html.twig' %}
{% block body_class %}full_picture{% endblock %}

{% block body %}
    <div class="center_form">
        <h2>Register</h2>
    {% for label, messages in app.flashes(['warning', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}